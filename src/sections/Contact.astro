---
import ContactItem from "@components/ContactItem.astro";
import Input from "@components/ui/Input.astro";
import Mail from "@components/icons/Mail.astro";
import MapaPin from "@components/icons/MapaPin.astro";
import Phone from "@components/icons/Phone.astro";
import SectionLayout from "@layouts/SectionLayout.astro";
---

<SectionLayout id="contact" class="relative bg-primary text-white py-20">
  
    <h2
      class="text-3xl md:text-4xl font-bold text-center mb-16 relative inline-block"
    >
      <span class="pb-2 border-b-4 border-secondary">Contáctanos</span>
    </h2>

    <div class={"grid md:grid-cols-2 gap-12"}>
      <div class="space-y-8">
        <ContactItem icon={Phone} title="Teléfono" value="983113550" />
        <ContactItem icon={Mail} title="Email" value="info@heingenieria.com" />
        <ContactItem
          icon={MapaPin}
          title="Dirección"
          value="JR. SAN IGNACIO NRO. 523 - SMP"
        />
      </div>

      <form class="space-y-6 bg-[#1D2D50] p-8 rounded-lg shadow-lg">
        <Input type="text" name="subject" id="subject" placeholder="Asunto" />
        <Input type="text" name="email" id="email" placeholder="Tu Email" />
        <textarea
          name="message"
          id="message"
          rows="5"
          placeholder="Tu Mensaje"
          class="w-full p-4 rounded-lg bg-[#0A2239] border border-gray-600
    focus:border-[#F4A261] focus:ring-2 focus:ring-[#F4A261] transition-all duration-200 text-white"
        ></textarea>
        <button
          type="submit"
          class="bg-tertiary w-full flex justify-center cursor-pointer items-center gap-x-2 hover:bg-blue-700 text-white px-8 py-3 rounded-md font-semibold transition transform hover:scale-105 duration-200"
        >
          <Mail class="w-6 h-6" />
          <span>Enviar Mensaje</span>
        </button>
      </form>
    </div>

</SectionLayout>
